<% include include/header %>

<div class="container">
    <div class="row">
        <h1><%= title %></h1>
        <a href="/board/write"><button type="button" class="btn btn-skin scroll" style="margin-left: 80%">글쓰기</button></a>
        <br><br>
        <table width="70%" border="1" align="center" class="table-condensed">
    <tr>
        <th width="40">번호</th>
        <th width="250">제목</th>
        <th>작성자</th>
        <th>등록일</th>
        <th width="40">조회</th>
    </tr>

    <%
    for(var i=0, len = data.length; i < len, item = data[i]; i++){
    %>

    <tr>
        <td><%=max-i%></td>
        <td><a href="/board/read/<%=item.bno%>"><%=item.title%></a></td> <!--글 상세보기-->
        <td><%=item.writer%></td>
        <td><%=item.date%></td>
        <td><%=item.hit%></td>
    </tr>
    <%
    }
    %>
</table>
<br>
<div style="width:46em;text-align:center;padding-top:2px;margin-left: 20em">
    <% if(page > pageSize) { %>
    [ <a href="/board/list/1" style="text-decoration: none;">◀◀</a> ]
    [ <a href="/board/list/<%=startPage-1%>" style="text-decoration: none;">◀</a> ]
    <% } else {%>
    [ <span style="color:gray">◀◀</span> ]
    [ <span style="color:gray">◀</span> ]
    <% } %>
    &nbsp;&nbsp;
    <% for (var i=startPage; i<=endPage; i++) { %>
    <% if (i== page) {%>
    [ <%=i%> ]
    <% } else { %>
    [ <a href="/board/list/<%=i%>" style="text-decoration: none;"><%=i%></a> ]
    <% } %>
    <% } %>
    &nbsp;&nbsp;
    <% if (endPage < totalPage) { %>
    [ <a href="/board/list/<%=endPage+1%>" style="text-decoration: none;">▶</a> ]
    [ <a href="/board/list/<%=totalPage%>" style="text-decoration: none;">▶▶</a> ]
    <% } else {%>
    [ <span style="color:gray">▶</span> ]
    [ <span style="color:gray">▶▶</span> ]
    <% } %>
        </div>
    </div>
</div>

<% include include/footer %>